# EditorConfig â€” https://editorconfig.org
# Keeps indentation and line endings consistent across editors and OSes.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,js,jsx,ts,tsx,css,scss,json,yml,yaml,md}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
