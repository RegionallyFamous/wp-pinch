{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "wp-pinch/chat",
    "version": "2.0.0",
    "title": "Pinch Chat",
    "category": "widgets",
    "icon": "admin-comments",
    "description": "Chat with your OpenClaw AI agent directly from the WordPress editor or frontend.",
    "keywords": [ "ai", "chat", "openclaw", "agent", "pinch" ],
    "textdomain": "wp-pinch",
    "supports": {
        "html": false,
        "align": [ "wide", "full" ],
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "interactivity": true
    },
    "attributes": {
        "placeholder": {
            "type": "string",
            "default": "Ask your AI assistant anything about this site..."
        },
        "showHeader": {
            "type": "boolean",
            "default": true
        },
        "maxHeight": {
            "type": "string",
            "default": "400px"
        },
        "blockId": {
            "type": "string",
            "default": ""
        }
    },
    "editorScript": "file:./index.js",
    "viewScriptModule": "file:./view.js",
    "style": "file:./style-index.css",
    "editorStyle": "file:./index.css",
    "render": "file:./render.php"
}
