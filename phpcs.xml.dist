<?xml version="1.0"?>
<ruleset name="WP Pinch">
	<description>WordPress coding standards for WP Pinch.</description>

	<!-- What to scan -->
	<file>./includes/</file>
	<file>./wp-pinch.php</file>
	<file>./uninstall.php</file>
	<file>./tests/</file>

	<!-- Only check PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show progress and use colors -->
	<arg value="ps"/>
	<arg name="colors"/>

	<!-- Parallel processing for speed -->
	<arg name="parallel" value="8"/>

	<!-- ================================================================= -->
	<!-- Standards                                                          -->
	<!-- ================================================================= -->

	<!-- WordPress-Extra includes WordPress-Core + common mistake checks -->
	<rule ref="WordPress-Extra"/>

	<!-- WordPress.Security catches escaping, sanitization, nonce issues -->
	<rule ref="WordPress.Security"/>

	<!-- ================================================================= -->
	<!-- Configuration                                                     -->
	<!-- ================================================================= -->

	<!-- Set the text domain for i18n checks -->
	<config name="text_domain" value="wp-pinch"/>

	<!-- Set minimum supported WordPress version -->
	<config name="minimum_wp_version" value="6.9"/>

	<!-- Prefixes for functions, classes, hooks, etc. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="wp_pinch"/>
				<element value="WP_Pinch"/>
				<element value="WP_PINCH"/>
			</property>
		</properties>
	</rule>

	<!-- ================================================================= -->
	<!-- Exclusions (necessary for plugin architecture)                    -->
	<!-- ================================================================= -->

	<!-- Allow short array syntax (WordPress standard still prefers array()) -->
	<!-- We use array() throughout, but don't fail on short syntax in case -->
	<!-- a contributor uses it -->

	<!-- Allow the MCP Server class to use dynamic hook names -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals.DynamicHooknameFound">
		<severity>0</severity>
	</rule>

	<!-- File name conventions: we use class-*.php in includes/; Ability/ and Settings/Tabs/ use PascalCase (namespace-based) -->
	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<severity>0</severity>
	</rule>

	<!-- Allow unused parameters required by WordPress hook/callback signatures -->
	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
		<severity>0</severity>
	</rule>

	<!-- Allow reserved-keyword parameter names that match WordPress conventions ($new, $readonly) -->
	<rule ref="Universal.NamingConventions.NoReservedKeywordParameterNames">
		<severity>0</severity>
	</rule>

	<!-- Display-only / allowlisted GET params (tab, filter, etc.); actions use nonce verification -->
	<rule ref="WordPress.Security.NonceVerification.Recommended">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Security.NonceVerification.Missing">
		<severity>0</severity>
	</rule>

	<!-- Custom tables (audit, RAG): direct queries by design; table names from trusted API -->
	<rule ref="WordPress.DB.DirectDatabaseQuery.DirectQuery">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.DB.DirectDatabaseQuery.NoCaching">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.DB.PreparedSQL.InterpolatedNotPrepared">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.DB.PreparedSQL.NotPrepared">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.DB.PreparedSQLPlaceholders.ReplacementsWrongNumber">
		<severity>0</severity>
	</rule>

	<!-- Local file / temp stream usage: llms.txt, CSV export, Chat SSE, debug.log tail -->
	<rule ref="WordPress.WP.AlternativeFunctions.file_get_contents_file_get_contents">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions.file_system_operations_file_put_contents">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions.file_system_operations_fopen">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions.file_system_operations_fclose">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.AlternativeFunctions.file_system_operations_fread">
		<severity>0</severity>
	</rule>

	<!-- Intentional: CSV download, block wrapper attributes, SSE stream output -->
	<rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
		<severity>0</severity>
	</rule>

	<!-- Token storage uses base64 for encryption; disk_free_space may emit on invalid path -->
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions.obfuscation_base64_encode">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions.obfuscation_base64_decode">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.PHP.NoSilencedErrors.Discouraged">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.PHP.DevelopmentFunctions.error_log_error_log">
		<severity>0</severity>
	</rule>

	<!-- WooCommerce tax_query; core plugin API object properties (e.g. Name) -->
	<rule ref="WordPress.DB.SlowDBQuery.slow_db_query_tax_query">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase">
		<severity>0</severity>
	</rule>

	<!-- Polyfill for WordPress core wp_execute_ability -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals.NonPrefixedFunctionFound">
		<severity>0</severity>
	</rule>

	<!-- Intentional empty catch (e.g. cache flush_group not supported) -->
	<rule ref="Generic.CodeAnalysis.EmptyStatement.DetectedCatch">
		<severity>0</severity>
	</rule>

	<!-- Allow comments that reference code (e.g. test explanations) -->
	<rule ref="Squiz.PHP.CommentedOutCode.Found">
		<severity>0</severity>
	</rule>

	<!-- Exclude node_modules, vendor, build from scanning -->
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>
	<exclude-pattern>/dist/*</exclude-pattern>
	<!-- WordPress test bootstrap uses unprefixed globals by convention -->
	<exclude-pattern>*/tests/bootstrap.php</exclude-pattern>

	<!-- Tests assert API keys (e.g. lowercase "wordpress") and response structure -->
	<rule ref="WordPress.WP.CapitalPDangit.MisspelledInText">
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>
</ruleset>
