<?xml version="1.0"?>
<ruleset name="WP Pinch Tests">
	<description>Relaxed PHPCS rules for test files (tests/).</description>

	<file>./tests/</file>

	<arg name="extensions" value="php"/>
	<arg value="ps"/>
	<arg name="colors"/>
	<arg name="parallel" value="8"/>

	<!-- WordPress-Core only: no Extra/Security so test code is not forced to production rules -->
	<rule ref="WordPress-Core"/>

	<!-- Relax naming: test methods and classes often don't use wp_pinch prefix -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<severity>0</severity>
	</rule>

	<!-- Unused parameters common in PHPUnit data providers and callbacks -->
	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
		<severity>0</severity>
	</rule>

	<!-- Array formatting: relaxed in tests (many inline arrays in assertions) -->
	<rule ref="WordPress.Arrays.ArrayDeclarationSpacing.AssociativeArrayFound">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Arrays.MultipleStatementAlignment.DoubleArrowNotAligned">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.WP.CapitalPDangit.MisspelledInText">
		<severity>0</severity>
	</rule>

	<!-- Multi-line function call formatting: relaxed in tests -->
	<rule ref="PEAR.Functions.FunctionCallSignature">
		<severity>0</severity>
	</rule>

	<!-- Assignment alignment: relaxed in tests -->
	<rule ref="Generic.Formatting.MultipleStatementAlignment">
		<severity>0</severity>
	</rule>

	<!-- Quote style: relaxed in tests -->
	<rule ref="Squiz.Strings.DoubleQuoteUsage.NotRequired">
		<severity>0</severity>
	</rule>

	<!-- Test files are Test_*.php (class name = filename) -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<severity>0</severity>
	</rule>

	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>
</ruleset>
